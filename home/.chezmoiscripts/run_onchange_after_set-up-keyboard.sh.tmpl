# set default keyboard layout to British-PC
defaults write com.apple.HIToolbox AppleCurrentKeyboardLayoutInputSourceID 'com.apple.keylayout.British-PC'

echo "Keyboard input sources configured: British-PC and RussianWin."

echo ""
echo "Setting keyboard shortcuts..."
# "Select the previous input source" - Ctrl+Space - Disable
defaults write com.apple.symbolichotkeys AppleSymbolicHotKeys -dict-add 60 "
<dict>
  <key>enabled</key>
  <false/>
  <key>value</key>
  <dict>
    <key>parameters</key>
    <array>
      <integer>32</integer>
      <integer>49</integer>
      <integer>262144</integer>
    </array>
    <key>type</key>
    <string>standard</string>
  </dict>
</dict>"
# "Select the next source in Input menu" - Cmd+Opt+Space
defaults write com.apple.symbolichotkeys AppleSymbolicHotKeys -dict-add 61 "
<dict>
  <key>enabled</key>
  <true/>
  <key>value</key>
  <dict>
    <key>parameters</key>
    <array>
      <integer>32</integer>
      <integer>49</integer>
      <integer>1572864</integer>
    </array>
    <key>type</key>
    <string>standard</string>
  </dict>
</dict>"
# "Show Finder search window" - Cmd+Opt+Space - Disable
defaults write com.apple.symbolichotkeys AppleSymbolicHotKeys -dict-add 65 "
<dict>
  <key>enabled</key>
  <false/>
  <key>value</key>
  <dict>
    <key>parameters</key>
